<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:text="Forgot password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:textSize="@dimen/title_text_size"
        android:background="@drawable/dialog_title_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="8dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your email"
                        android:imeActionId="@+id/getPassword"
                        android:imeActionLabel="Get password"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_gray_bg"
                        android:text="Cancel"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/btGetPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_blue_bg"
                        android:text="Get password"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>