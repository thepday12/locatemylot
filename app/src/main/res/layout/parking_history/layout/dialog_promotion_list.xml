<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:textSize="@dimen/title_text_size"
        android:background="@drawable/dialog_title_bg"
        android:text="Saved Promotions"
        android:gravity="center"
        android:textColor="@android:color/white"
        />

    <neublick.locatemylot.ui.MyGridView
        android:id="@+id/promotion_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:layout_below="@+id/tvTitle"
        android:layout_above="@+id/action_close"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <Button
        android:id="@+id/action_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Close"
        android:textColor="@android:color/white"
        android:background="@drawable/button_gray_bg"
        android:layout_margin="8dp"
        />
</LinearLayout>