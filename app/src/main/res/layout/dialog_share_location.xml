<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:textSize="@dimen/title_text_size"
        android:background="@drawable/dialog_title_bg"
        android:text="Share My Vehicle Location"
        android:gravity="center"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/share_vehicle"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btChooseContact"
            android:background="@drawable/button_blue_bg"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/ic_contact_phone_white_24dp"/>
        <AutoCompleteTextView
            android:background="@drawable/edit_text_"
            android:layout_toLeftOf="@+id/btChooseContact"
            android:layout_centerVertical="true"
            android:id="@+id/etShareId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:inputType="phone"
            android:textSize="19dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/action_share_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Share"
        android:background="@drawable/button_blue_bg"
        android:textColor="@android:color/white"
        />
    
    <Button
        android:id="@+id/action_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        android:background="@drawable/button_gray_bg"
        android:textColor="@android:color/white"
        />
</LinearLayout>